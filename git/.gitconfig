# ~/.gitconfig - Git configuration

[user]
    # Update these with your information
    name = Your Name
    email = your.email@example.com

[core]
    editor = vim
    autocrlf = input
    excludesfile = ~/.gitignore_global

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = simple
    followTags = true

[fetch]
    prune = true

[color]
    ui = auto

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green
    changed = yellow
    untracked = red

[alias]
    # Common shortcuts
    st = status
    co = checkout
    br = branch
    ci = commit
    unstage = reset HEAD --
    last = log -1 HEAD
    visual = log --oneline --graph --decorate --all

    # More complex aliases
    lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    amend = commit --amend --no-edit
    fixup = commit --fixup
    squash = commit --squash

    # Show branches sorted by last modified
    branches = branch --sort=-committerdate

    # Show contributors
    contributors = shortlog --summary --numbered

[diff]
    tool = vimdiff

[merge]
    tool = vimdiff
    conflictstyle = diff3

[help]
    autocorrect = 1

[credential]
    helper = osxkeychain
